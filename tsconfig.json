{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "cline/src/**/*",
    "src/electron.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
